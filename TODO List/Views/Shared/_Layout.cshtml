
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ToDo List</title>

    <!--Add Theme Path-->
	<link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <!---->
    
    <!--Add Icons Path-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

	<link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <!---->
     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TODO_List.styles.css" asp-append-version="true" />
</head>
<body>
    <header class=" mb-20">
        <nav class="navbar navbar-expand-lg bg-primary mb-4 " data-bs-theme="dark"  >
            <div class="container-fluid">
                <a class="navbar-brand"  asp-controller="Home" asp-action="Index">TODO_List</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" >
                       @if(User.Identity.IsAuthenticated  )
                       {
                         <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link  navbar-brand font-monospace"
                                asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link navbar-brand font-monospace"
                                asp-controller="TODO" asp-action="Details">Task</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  navbar-brand font-monospace" 
                                asp-controller="Category" asp-action="Details">Category</a>
                            </li>
                             @if(User.IsInRole("Admin"))
                            {
                                 <li class="nav-item">
                                    <a class="nav-link  navbar-brand font-monospace" 
                                    asp-controller="Roles" asp-action="New">AddRole</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link navbar-brand font-monospace"
                                       asp-controller="Account" asp-action="AddAdmin">AddAdmin</a>
                                </li>
                            }
                            
                         </ul>
                       }
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated == false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link font-monospace text-green" href="#">Welcome @User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link font-monospace" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            
        </nav>
    </header>
    <div class="container mb-20">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TODO_List - <a class="bi bi-linkedin" target="_blank" href="https://www.linkedin.com/in/abdullah-ali-5729b4234/"></a>
            - <a class="bi bi-facebook" target="_blank " href="https://www.facebook.com/abdalla.elkholy.946"></a>
            - <a class="bi bi-whatsapp" target="_blank" href="#"></a>
            - <a class="bi bi-github" target="_blank " href="https://github.com/AbdullahElkholy99?tab=repositories"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
